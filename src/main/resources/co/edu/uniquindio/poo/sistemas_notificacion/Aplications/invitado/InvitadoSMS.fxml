<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller=".paquete.LoginController"
      alignment="CENTER"
      spacing="15"
      padding="20">

    <Label text="Bienvenido al Sistema" style="-fx-font-size: 20px; -fx-font-weight: bold;" />

    <TextField fx:id="usernameField" promptText="Usuario" maxWidth="250"/>
    <PasswordField fx:id="passwordField" promptText="Contraseña" maxWidth="250"/>

    <Button text="Iniciar Sesión" onAction="#onLoginClick" maxWidth="150"/>

    <Label fx:id="errorLabel" text="" textFill="red" visible="false"/>

</VBox>
