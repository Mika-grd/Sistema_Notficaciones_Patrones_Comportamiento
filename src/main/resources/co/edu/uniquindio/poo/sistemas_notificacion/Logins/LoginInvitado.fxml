<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="co.edu.uniquindio.poo.sistemas_notificacion.viewController.LoginInvitadoViewController"
            prefWidth="500.0" prefHeight="250.0">

    <children>

        <Label layoutX="40.0" layoutY="40.0"
               wrapText="true"
               prefWidth="420.0"
               text="Bienvenido. Has ingresado como invitado. No podrás agendar espacios para recibir notificaciones, pero aún podrás recibir algunas notificaciones primarias."
               style="-fx-font-size: 14px;" />

        <Button layoutX="120.0" layoutY="150.0"
                prefWidth="100.0"
                text="Volver"
                onAction="#onVolverClick" />

        <Button layoutX="280.0" layoutY="150.0"
                prefWidth="100.0"
                text="Ingresar"
                onAction="#onIngresarClick" />

    </children>
</AnchorPane>
